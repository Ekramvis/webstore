<!DOCTYPE html>
<html>
<head>
  <title>Webstore</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%= debug session %>
<% if logged_in?%>
	<%= link_to "Logout", session_path, :method => "delete" %>
<% else %>
	<%= link_to "Login", new_session_path %>
<% end %>

<%= yield %>

</body>
</html>
